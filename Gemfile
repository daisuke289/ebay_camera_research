gem 'googleauth', '~> 1.8'

# HTTP クライアント（eBay API用）
gem 'faraday', '~> 2.7'
gem 'faraday-retry', '~> 2.2'

# 環境変数管理
gem 'dotenv', '~> 2.8'

# JSON パース
gem 'oj', '~> 3.16'

# CLI ツール
gem 'thor', '~> 1.3'

# ログ出力
gem 'logger', '~> 1.6'

# 進捗表示
gem 'ruby-progressbar', '~> 1.13'

group :development, :test do
  gem 'rspec', '~> 3.12'
  gem 'webmock', '~> 3.19'
  gem 'rubocop', '~> 1.57'
end
